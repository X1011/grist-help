<!-- Global site tag (gtag.js) - Google Analytics -->
{% set analytics = config.google_analytics %}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ analytics[0] }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '{{ analytics[0] }}');
  /* Register handler to log search on blur */
  document.addEventListener("DOMContentLoaded", () => {
    var query = document.getElementById('mkdocs-search-query');
    if (query) {
      query.addEventListener("blur", function() {
        if (this.value) {
          var path = document.location.pathname;
          gtag('config', '{{ analytics[0] }}', {
            'page_path': path + "/virtual/search/" + this.value
          });
        }
      })
    }
  });
</script>
